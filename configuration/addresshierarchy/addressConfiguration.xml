    <addressComponent>
      <field>COUNTY_DISTRICT</field>
      <nameMapping>Area</nameMapping>
      <sizeMapping>40</sizeMapping>
      <requiredInHierarchy>false</requiredInHierarchy>
    </addressComponent>
    <addressComponent>
      <field>POSTAL_CODE</field>
      <nameMapping>Block</nameMapping>
      <sizeMapping>40</sizeMapping>
      <requiredInHierarchy>false</requiredInHierarchy>
